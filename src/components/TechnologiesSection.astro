---
import { Image } from "astro:assets";
import { technologies } from "../data/technologies";
---

<section id="technologies" class="relative">
  <div class="container mx-auto px-6">
    <div class="mb-16 text-center">
      <div class="mb-4 flex items-center justify-center gap-3 dark:text-blue-400">
        <!-- Ícono consistente con otras secciones -->
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          class="h-8 w-8 md:h-10 md:w-10"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path d="M18 16l4-4-4-4"></path>
          <path d="M6 8l-4 4 4 4"></path>
          <path d="M14 4l-4 16"></path>
        </svg>

        <h2 class="text-2xl font-medium text-gray-900 md:text-3xl dark:text-white">Stack tecnológico</h2>
      </div>
    </div>

    <div class="mx-auto grid max-w-5xl grid-cols-2 gap-6 px-4 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-7">
      {
        technologies.map((tech) => (
          <div class="flex flex-col items-center gap-3 transition-transform hover:scale-110">
            <Image src={tech.icon} alt={tech.name} width={56} height={56} class="h-10 w-10" />
            <span class="text-base text-gray-800 dark:text-gray-300">{tech.name}</span>
          </div>
        ))
      }
    </div>
  </div>
</section>