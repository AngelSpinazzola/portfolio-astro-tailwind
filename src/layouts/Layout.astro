---
import "@fontsource/inter/400.css";
import "@fontsource/inter/500.css";
import "@fontsource/inter/600.css";
import "@fontsource/inter/700.css";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{Astro.props.title}</title>
    <meta name="description" content={Astro.props.description} />
  </head>
  <body class="bg-white font-sans text-gray-900 transition-colors dark:bg-gray-900 dark:text-white">
    <slot />
  </body>
</html>

<style is:global>
  body {
    font-family:
      "Inter",
      system-ui,
      -apple-system,
      sans-serif;
    background: linear-gradient(135deg, #afafaf 0%, #ffffff 50%, #cfcfcf 100%);
    padding-top: 5rem;
  }

  .dark body {
    background: linear-gradient(135deg, #0a0a0f 0%, #1a1625 50%, #0a0a0f 100%);
  }

  section {
    background: transparent !important;
  }

  section .bg-white {
    background-color: rgba(255, 255, 255, 0.8) !important;
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .dark section .bg-white {
    background-color: rgba(7, 12, 26, 0.8) !important;
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  html {
    scroll-behavior: smooth;
  }

  section[id] {
    scroll-margin-top: 5rem;
  }

  @media (max-width: 768px) {
    body {
      padding-top: 6.5rem;
    }
  }
</style>